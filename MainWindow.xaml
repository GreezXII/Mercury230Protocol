<Window x:Class="Mercury230Protocol.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mercury230Protocol"
        mc:Ignorable="d"
        Title="Протокол Меркурий 230" Height="450" Width="Auto">
    <Window.Resources>
        <Style x:Key="Default">
            <Setter Property="Control.Margin" Value="10"></Setter>
            <Setter Property="Control.FontSize" Value="40"></Setter>
        </Style>
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <StatusBar x:Name="StatusLBL" DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Name="StatusBar" Text="Приложение готово к работе"></TextBlock>
            </StatusBarItem>
        </StatusBar>
        <StackPanel DockPanel.Dock="Left">
            <Button>Соединение</Button>
            <Button>О счётчике</Button>
            <Button>Энергия</Button>
            <Button>Журналы</Button>
            <Button>Расписание</Button>
        </StackPanel>
        <Frame x:Name="MainFrame" DockPanel.Dock="Right" Width="Auto"></Frame>
    </DockPanel>
</Window>
